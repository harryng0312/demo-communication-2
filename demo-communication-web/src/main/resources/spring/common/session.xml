<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd ">

    <import resource="db.xml"/>

    <bean class="org.springframework.boot.autoconfigure.session.JdbcSessionConfiguration$SpringBootJdbcHttpSessionConfiguration">
        <property name="cleanupCron" value="0 * * * * *"/>
        <property name="maxInactiveIntervalInSeconds" value="300" />
        <property name="transactionManager" ref="dsTransactionManager" />
    </bean>

    <bean class="org.springframework.session.web.http.DefaultCookieSerializer">
        <property name="cookieName" value="sessionId"/>
    </bean>

</beans>